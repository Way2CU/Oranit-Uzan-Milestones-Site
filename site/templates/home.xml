<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<header>
				<img 
					src="_BASEURL.'/site/images/logo.svg'"
					alt="site_title" cms:constant="alt"
					cms:eval="src"
				/>
				<cms:desktop>
					<cms:module 
						name="articles"
						action="show"
						text_id="header_article"
						template="parts/header_article.xml"
					/>
					<a
						href="'tel:'.urlencode(Language::getText('phone_number'))"
						cms:eval="href"
						class="phone"
						>
						<cms:text constant="phone_number"/>
					</a>
					<div id="form">
						<h5><cms:text constant="form_title"/></h5>
						<cms:module 
							name="contact_form"
							action="show"
							text_id="contact_form"
						/>
					</div>
				</cms:desktop>
			</header>
			<cms:mobile>
				<div id="form">
					<cms:module 
						name="articles"
						action="show"
						text_id="header_article"
						template="parts/header_article.xml"
					/>
					<a
						href="'tel:'.urlencode(Language::getText('phone_number'))"
						cms:eval="href"
						class="phone"
						>
						<cms:text constant="phone_number"/>
					</a>
					<h5><cms:text constant="form_title"/></h5>
					<cms:module 
						name="contact_form"
						action="show"
						text_id="contact_form"
					/>
				</div>
			</cms:mobile>
			<section id="bar_mitzvah">
				<cms:module 
					name="articles"
					action="show"
					text_id="bar_mitzvah"
					template="stock/article_generic.xml"
				>
				<param name="title" value=""/>
				</cms:module>
			</section>
			<section id="girls">
				<ul>
					<cms:module 
						name="gallery"
						action="show_image_list"
						order_by="text_id"
						group="girls"
						template="parts/image_list.xml"
					/>
				</ul>
			</section>
			<section id="women">
				<cms:module 
					name="articles"
					action="show"
					text_id="women"
					template="stock/article_generic.xml"
				>
				<param name="title" value=""/>
				</cms:module>
			</section>
			<section id="women_gallery">
				<ul>
					<cms:module 
						name="gallery"
						action="show_image_list"
						order_by="text_id"
						group="women"
						template="parts/image_list.xml"
					/>
				</ul>
				<h3><cms:text constant="women_workshop"/></h3>
			</section>
			<footer>
				<cms:desktop>
					<img 
						src="_BASEURL.'/site/images/logo.svg'"
						alt="logo"
						cms:eval="src"
					/>
				</cms:desktop>
				<cms:module 
					name="articles"
					action="show"
					text_id="footer_article"
					template="stock/article_generic.xml"
					>
				<param name="title" value=""/>
				</cms:module>
				<a
					href="'tel:'.urlencode(Language::getText('phone_number'))"
					cms:eval="href"
					class="phone"
					>
					<cms:text constant="phone_number"/>
				</a>
				<div id="form_footer">
					<h5><cms:text constant="form_title_footer"/></h5>
					<cms:module 
						name="contact_form"
						action="show"
						text_id="contact_form"
					/>
				</div>
				<cms:template file="stock/copyright.xml">
					<param name="holder" value="copyright_holder"/>
					<param name="text" value="copyright_text"/>
					<param name="light" value=""/>
				</cms:template>
			</footer>
		</body>
	</html>
</document>
